<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vb.helloRabenau"
    android:versionCode="1"
    android:versionName="0.1a">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="vb.helloRabenau.StartupActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="vb.helloRabenau.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="vb.helloRabenau.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="vb.helloRabenau.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSettings" />
        <activity
            android:name="vb.helloRabenau.doctors.DoctorsActivity"
            android:label="@string/title_activity_doctors"
            android:parentActivityName="vb.helloRabenau.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppDoctors" />
        <activity
            android:name="vb.helloRabenau.doctors.DoctorsDetails"
            android:label="@string/title_activity_doctors"
            android:parentActivityName="vb.helloRabenau.doctors.DoctorsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppDoctors" />
        <activity
            android:name="vb.helloRabenau.places.PlacesActivity"
            android:label="@string/title_activity_places"
            android:parentActivityName="vb.helloRabenau.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppPlaces" />
        <activity
            android:name="vb.helloRabenau.places.PlacesCategoryActivity"
            android:label=""
            android:parentActivityName="vb.helloRabenau.places.PlacesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppPlaces" />
        <activity
            android:name="vb.helloRabenau.places.PlacesDetailsActivity"
            android:label="@string/title_activity_places_details"
            android:parentActivityName="vb.helloRabenau.places.PlacesCategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppPlaces" />
        <activity
            android:name="vb.helloRabenau.publictransport.PublicTransportActivity"
            android:label="@string/title_activity_public_transport"
            android:parentActivityName="vb.helloRabenau.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppPublicTransport" />
        <activity
            android:name="vb.helloRabenau.calendar.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:parentActivityName="vb.helloRabenau.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCalendar" />
        <activity
            android:name="vb.helloRabenau.emergency.EmergencyActivity"
            android:label="@string/title_activity_emergency"
            android:parentActivityName="vb.helloRabenau.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppEmergency" />
    </application>

</manifest>
