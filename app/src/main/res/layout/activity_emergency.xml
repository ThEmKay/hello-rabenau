<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_emergency"
    android:orientation="vertical"
    tools:context="vb.helloRabenau.emergency.EmergencyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#fff"
        android:alpha="0.9" >

        <!-- CALL AMBULANCE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblAmbulance"
            android:text="@string/ambulance"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgAmbulance"
            android:src="@drawable/ic_ambulance"
            android:layout_below="@+id/lblAmbulance" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nbrAmbulance"
            android:drawableLeft="@drawable/ic_call"
            android:textSize="35dp"
            android:textColor="#000"
            android:text="112"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lblAmbulance" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#fff"
        android:alpha="0.9" >

        <!-- CALL VIOLENCE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblViolence"
            android:text="Polizei"
            android:textColor="#000"
            android:textSize="22dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgViolence"
            android:src="@drawable/ic_violence"
            android:layout_below="@+id/lblViolence" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/imgViolence"
            android:layout_below="@+id/lblViolence"
            android:drawableLeft="@drawable/ic_call"
            android:id="@+id/nbrViolence"
            android:text="110"
            android:textColor="#000"
            android:textSize="35dp"
            android:layout_alignParentRight="true" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#fff"
        android:alpha="0.9" >

        <!-- CALL FIRE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblFire"
            android:text="@string/fire_accident"
            android:textColor="#000"
            android:textSize="22dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgFire"
            android:src="@drawable/ic_fire"
            android:layout_below="@+id/lblFire" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/imgFire"
            android:layout_below="@+id/lblFire"
            android:drawableLeft="@drawable/ic_call"
            android:id="@+id/nbrFire"
            android:textSize="35dp"
            android:textColor="#000"
            android:text="112"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>
